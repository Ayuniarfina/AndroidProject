<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/tangkiIsi"
        android:layout_width="243dp"
        android:layout_height="243dp"
        android:layout_marginBottom="95dp"
        android:layout_marginEnd="141dp"
        android:layout_marginRight="141dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/tangkiisi"
        android:scaleType="fitStart"
        android:src="@drawable/tangki"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497"
        app:srcCompat="@drawable/tangki" />

    <ImageView
        android:id="@+id/tangkiBackground"
        android:layout_width="243dp"
        android:layout_height="243dp"
        android:layout_marginBottom="95dp"
        android:layout_marginEnd="141dp"
        android:layout_marginRight="141dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitStart"
        android:contentDescription="@string/tangkiAlert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tangki2" />

    <TextView
        android:id="@+id/fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tangkiIsi"
        app:layout_constraintEnd_toEndOf="@+id/tangkiIsi"
        app:layout_constraintStart_toStartOf="@+id/tangkiIsi"
        app:layout_constraintTop_toTopOf="@+id/tangkiIsi"
        tools:text="@string/fill" />

</android.support.constraint.ConstraintLayout>